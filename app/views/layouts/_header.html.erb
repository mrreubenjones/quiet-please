<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Quiet, Please", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav">
        <li><%= link_to "Home", '#' %></li>
        <li><%= link_to "Help", '#' %></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li><%= link_to "Hello, #{current_user.first_name}", dashboard_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= icon('cog') %>
            </a>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to "Dashboard", dashboard_path %></li>
              <li><%= link_to "Edit Profile", '#' %></li>
              <li><%= link_to "Account Settings", '#' %></li>
              <li class="divider"></li>
              <li><%= link_to "Log out", sessions_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", new_session_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
