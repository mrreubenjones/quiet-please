<div class="row">
  <div class="col-sm-12">
    <table class="table table-striped">
      <tr>
        <th>Tier</th>
        <th>Opening Time</th>
        <th>Closing Time</th>
        <th>Actions</th>
      </tr>

    <% @tiers.each do |t| %>
      <tr>
        <td><%= link_to t.name, admin_tier_path(t) %></td>
        <td><%= t.opening_time %></td>
        <td><%= t.closing_time %></td>
        <td class="text-nowrap">
          <%= link_to icon('pencil'), edit_admin_tier_path(t) %>
          <%= link_to icon('trash'),
            admin_tier_path(t),
            method: :delete,
            data: { confirm: "Are you sure you want to delete this tier?
              There's no going back!" } %>
        </td>
      </tr>
    <% end %>
    </table>
  </div>
</div>