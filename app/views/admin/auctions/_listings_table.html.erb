<table class="table table-striped">
  <tr>
    <th>Listing</th>
    <th>Description</th>
    <th>Reserve</th>
    <th class="text-nowrap">Price Guarantee</th>
    <th></th>
  </tr>

<% @listings.each do |l| %>
  <tr>
    <td><%= link_to l.title, admin_listing_path(l.id) %></td>
    <td><%= l.description %></td>
    <td><%= l.reserve_price %></td>
    <td><%= l.guaranteed_price %></td>
    <td class="text-nowrap">
      <!-- Buttons trigger modals -->
      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#editListing">
        <%= image_tag icon('pencil') %>
      </button>
      <%# link_to icon('pencil'), edit_admin_listing_path(l) %>
      <%= link_to icon('trash'),
        admin_listing_path(l.id),
        method: :delete,
        data: { confirm: "Are you sure? There's no going back!" } %>
    </td>
  </tr>
<% end %>
</table>



