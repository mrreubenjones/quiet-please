<table class="table table-striped">
  <tr>
    <th>Listing</th>
    <th>Description</th>
    <th>Reserve</th>
    <th class="text-nowrap">Price Guarantee</th>
  </tr>

<% @listings.each do |l| %>
  <tr>
    <td><%= link_to l.title, l %></td>
    <td><%= l.description %></td>
    <td><%= l.reserve_price %></td>
    <td><%= l.guaranteed_price %></td>
  </tr>
<% end %>
</table>