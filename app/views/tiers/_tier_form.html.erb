<!-- New Tier Modal -->
<div class="modal fade" id="tierModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Add new tier</h4>
      </div>
      <div class="modal-body form">
        <%= form_for [@auction, @tier] do |f| %>
          <div class="form-group col-xs-8">
            <%= f.label :name %>
            <%= f.text_field :name, class: 'form-control' %>
          </div>
          <div class="form-group col-xs-8">
            <%= f.label :description %>
            <%= f.text_field :description, class: 'form-control' %>
          </div>
          <div class="form-group col-xs-8">
            <%= f.label :opening_time %>
            <%= f.text_field :opening_time, class: 'form-control' %>
          </div>
          <div class="form-group col-xs-8">
            <%= f.label :closing_time %>
            <%= f.text_field :closing_time, class: 'form-control' %>
          </div>
          <div class="form-group col-xs-8">
            <%= f.label :badge_color %>
            <%= f.color_field :badge_color, value: '#2833FF', class: 'form-control short' %>
          </div>

        <!-- Validations -->
        <div class="col-xs-8">
          <% if @tier.errors.any? %>
            <ul>
              <% @tier.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          <% end %>
        </div>
      </div>
      <div class="modal-footer">
          <%= f.submit btn_label, class: "btn btn-primary" %>
        <% end %>
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>